{
  "name": "opentab-vscode",
  "displayName": "OpenTab Tablature Language",
  "description": "Syntax highlighting and formatting support for OpenTab tablature files.",
  "version": "0.0.2",
  "publisher": "Homeputers",
  "icon": "icon.ico",
  "keywords": [
    "opentab",
    "tablature",
    "guitar",
    "music",
    "chordpro",
    "guitarpro"
  ],
  "categories": [
    "Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/homeputers/opentab"
  },
  "homepage": "https://github.com/homeputers/opentab",
  "bugs": {
    "url": "https://github.com/homeputers/opentab/issues"
  },
  "main": "./src/extension.js",
  "activationEvents": [
    "onLanguage:opentab"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "scripts": {
    "test": "node ./tests/validator.test.js"
  },
  "dependencies": {
    "@opentab/language-service": "file:../../tools/language-service"
  },
  "contributes": {
    "commands": [
      {
        "command": "opentab.formatDocument",
        "title": "OpenTab: Format Document"
      }
    ],
    "languages": [
      {
        "id": "opentab",
        "aliases": [
          "OpenTab",
          "opentab"
        ],
        "extensions": [
          ".otab"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "opentab",
        "scopeName": "source.opentab",
        "path": "./syntaxes/opentab.tmLanguage.json"
      }
    ]
  }
}

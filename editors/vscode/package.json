{
  "name": "opentab-vscode",
  "displayName": "OpenTab Tablature Language",
  "description": "Syntax highlighting and formatting support for OpenTab tablature files.",
  "version": "0.0.2",
  "publisher": "Homeputers",
  "icon": "icon.png",
  "keywords": [
    "opentab",
    "tablature",
    "guitar",
    "music",
    "chordpro",
    "guitarpro"
  ],
  "categories": [
    "Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/homeputers/opentab"
  },
  "homepage": "https://github.com/homeputers/opentab",
  "bugs": {
    "url": "https://github.com/homeputers/opentab/issues"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:opentab"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "scripts": {
    "sync-language-service": "node ./scripts/sync-language-service.mjs",
    "build": "npm run sync-language-service && tsup",
    "watch": "npm run sync-language-service && tsup --watch",
    "test": "npm run sync-language-service && node ./tests/validator.test.js && node ./tests/smoke.test.js",
    "prepare:vsce": "npm run build",
    "vsce:package": "npm run prepare:vsce && npx vsce package",
    "vsce:publish": "npm run prepare:vsce && npx vsce publish"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.4.5"
  },
  "contributes": {
    "commands": [
      {
        "command": "opentab.formatDocument",
        "title": "OpenTab: Format Document"
      },
      {
        "command": "opentab.preview",
        "title": "OpenTab: Preview"
      },
      {
        "command": "opentab.exportAscii",
        "title": "OpenTab: Export ASCII..."
      },
      {
        "command": "opentab.exportMidi",
        "title": "OpenTab: Export MIDI..."
      }
    ],
    "languages": [
      {
        "id": "opentab",
        "aliases": [
          "OpenTab",
          "opentab"
        ],
        "extensions": [
          ".otab"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "opentab",
        "scopeName": "source.opentab",
        "path": "./syntaxes/opentab.tmLanguage.json"
      }
    ]
  }
}
